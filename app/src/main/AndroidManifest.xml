<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.portalberita">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewsDetailActivity"
            android:label="Detail News" />
        <activity
            android:name=".category.Business"
            android:label="Business" />
        <activity
            android:name=".category.Entertainment"
            android:label="Entertainment" />
        <activity
            android:name=".category.Health"
            android:label="Health" />
        <activity
            android:name=".category.Science"
            android:label="Science" />
        <activity
            android:name=".category.Sports"
            android:label="Sports" />
        <activity
            android:name=".category.Technology"
            android:label="Technology" />
    </application>

</manifest>